{
  "name": "@jibjiby/tailwind-to-inline",
  "version": "1.0.4",
  "description": "Convert HTML templates with Tailwind CSS classes to inline styles.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    "import": {
      "types": "dist/index.d.mts",
      "import": "dist/index.mjs"
    },
    "require": {
      "types": "dist/index.d.ts",
      "require": "dist/index.js"
    }
  },
  "scripts": {
    "start": "ts-node index.ts",
    "build": "tsup",
    "test": "jest",
    "lint": "eslint . --fix --config eslint.config.mjs",
    "format": "prettier --ignore-path .gitignore dist --write \"**/*.+(js|ts|json|html)\""
  },
  "author": "Jibjiby",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.10.1",
    "eslint": "^9.9.1",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.4.0"
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "fs": "^0.0.1-security",
    "handlebars": "^4.7.8",
    "juice": "^11.0.0",
    "postcss": "^8.4.43",
    "postcss-rem-to-pixel": "^4.1.2",
    "tailwindcss": "^3.4.10"
  }
}
